---
import { getCollection } from 'astro:content';
import Card from '../primitives/Card.astro';
import ButtonLink from '../primitives/ButtonLink.astro';

interface Props {
  title: string;
  subtitle?: string;
  displayMode?: 'upcoming' | 'past' | 'all';
  limit?: number;
  lang?: 'fr' | 'en';
  class?: string;
}

const {
  title,
  subtitle,
  displayMode = 'upcoming',
  limit,
  lang = 'fr',
  class: className = '',
} = Astro.props;

// Fetch all events from the collection
const allEvents = await getCollection('events', ({ data }) => {
  return data.lang === lang;
});

// Filter events based on display mode
const now = new Date();
let filteredEvents = allEvents;

if (displayMode === 'upcoming') {
  filteredEvents = allEvents.filter(event => event.data.date >= now);
} else if (displayMode === 'past') {
  filteredEvents = allEvents.filter(event => event.data.date < now);
}

// Sort events by date (upcoming: ascending, past: descending)
filteredEvents.sort((a, b) => {
  const dateA = a.data.date.getTime();
  const dateB = b.data.date.getTime();
  return displayMode === 'past' ? dateB - dateA : dateA - dateB;
});

// Apply limit if specified
const events = limit ? filteredEvents.slice(0, limit) : filteredEvents;

// Format date helper
const formatDate = (date: Date, locale: string = 'fr-FR') => {
  return new Intl.DateTimeFormat(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

const sectionClasses = [
  'py-16 md:py-24',
  className,
].filter(Boolean).join(' ');
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading mb-4">
        {title}
      </h2>
      
      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>

    {events.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-lg text-gray-500">
          {displayMode === 'upcoming' 
            ? lang === 'fr' ? 'Aucun événement à venir pour le moment.' : 'No upcoming events at the moment.'
            : lang === 'fr' ? 'Aucun événement passé.' : 'No past events.'}
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {events.map((event) => (
          <Card variant="bordered" padding="lg" class="flex flex-col h-full hover:shadow-lg transition-shadow duration-300">
            <div class="flex-1">
              {event.data.featured && (
                <span class="inline-block px-3 py-1 text-xs font-semibold text-primary-700 bg-primary-100 rounded-full mb-3">
                  {lang === 'fr' ? 'À la une' : 'Featured'}
                </span>
              )}
              
              <h3 class="text-xl font-bold font-heading mb-3">
                {event.data.title}
              </h3>
              
              <div class="space-y-2 mb-4 text-sm text-gray-600">
                <div class="flex items-start gap-2">
                  <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>
                    {formatDate(event.data.date, lang === 'fr' ? 'fr-FR' : 'en-US')}
                    {event.data.endDate && (
                      <> - {formatDate(event.data.endDate, lang === 'fr' ? 'fr-FR' : 'en-US')}</>
                    )}
                  </span>
                </div>
                
                <div class="flex items-start gap-2">
                  <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>{event.data.location}</span>
                </div>
              </div>
              
              <p class="text-gray-700 mb-4">
                {event.data.description}
              </p>
              
              {event.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-4">
                  {event.data.tags.map((tag) => (
                    <span class="inline-block px-2 py-1 text-xs text-gray-600 bg-gray-100 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
            
            {event.data.registrationUrl && (
              <div class="mt-4 pt-4 border-t border-gray-200">
                <ButtonLink 
                  href={event.data.registrationUrl}
                  variant="primary" 
                  size="sm" 
                  class="w-full"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {lang === 'fr' ? "S'inscrire" : 'Register'}
                </ButtonLink>
              </div>
            )}
          </Card>
        ))}
      </div>
    )}
  </div>
</section>
