---
import ButtonLink from '../primitives/ButtonLink.astro';

interface Props {
  title: string;
  description?: string;
  primaryCta: {
    label: string;
    href: string;
  };
  secondaryCta?: {
    label: string;
    href: string;
  };
  background?: 'default' | 'accent' | 'gradient';
  class?: string;
}

const {
  title,
  description,
  primaryCta,
  secondaryCta,
  background = 'default',
  class: className = '',
} = Astro.props;

const backgroundClasses = {
  default: 'bg-gray-50',
  accent: 'bg-primary-600 text-white',
  gradient: 'bg-gradient-to-r from-primary-600 to-secondary-600 text-white',
};

const sectionClasses = [
  'py-16 md:py-20 lg:py-24',
  backgroundClasses[background],
  className,
].filter(Boolean).join(' ');

const isColoredBackground = background === 'accent' || background === 'gradient';
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl text-center">
    <h2 class={`text-3xl sm:text-4xl lg:text-5xl font-bold font-heading mb-4 lg:mb-6 ${isColoredBackground ? 'text-white' : 'text-gray-900'}`}>
      {title}
    </h2>
    
    {description && (
      <p class={`text-lg sm:text-xl mb-8 lg:mb-10 ${isColoredBackground ? 'text-white/90' : 'text-gray-600'}`}>
        {description}
      </p>
    )}
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <ButtonLink
        href={primaryCta.href}
        variant={isColoredBackground ? 'secondary' : 'primary'}
        size="lg"
      >
        {primaryCta.label}
      </ButtonLink>
      
      {secondaryCta && (
        <ButtonLink
          href={secondaryCta.href}
          variant="ghost"
          size="lg"
          class={isColoredBackground ? 'text-white hover:bg-white/10 active:bg-white/20' : ''}
        >
          {secondaryCta.label}
        </ButtonLink>
      )}
    </div>
  </div>
</section>
