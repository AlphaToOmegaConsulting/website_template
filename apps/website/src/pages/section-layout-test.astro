---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLayout from '../layouts/SectionLayout.astro';
---

<BaseLayout
  title="SectionLayout Test"
  description="Testing SectionLayout component with different configurations"
  lang="fr"
>
  <!-- Test: Default width and spacing -->
  <SectionLayout>
    <h2 class="text-2xl font-heading font-bold mb-4">Default Section</h2>
    <p class="text-foreground">This section uses default width (1024px) and default spacing (5rem vertical padding).</p>
  </SectionLayout>

  <!-- Test: Narrow width with small spacing -->
  <SectionLayout width="narrow" spacing="sm" background="bg-gray-50">
    <h2 class="text-2xl font-heading font-bold mb-4">Narrow Section (Small Spacing)</h2>
    <p class="text-foreground">This section uses narrow width (640px) and small spacing (3rem vertical padding) with gray background.</p>
  </SectionLayout>

  <!-- Test: Wide width with large spacing -->
  <SectionLayout width="wide" spacing="lg" background="bg-primary-50">
    <h2 class="text-2xl font-heading font-bold mb-4">Wide Section (Large Spacing)</h2>
    <p class="text-foreground">This section uses wide width (1280px) and large spacing (7rem vertical padding) with primary background.</p>
  </SectionLayout>

  <!-- Test: Full width with extra large spacing -->
  <SectionLayout width="full" spacing="xl" background="bg-secondary-50">
    <div class="px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-heading font-bold mb-4">Full Width Section (XL Spacing)</h2>
      <p class="text-foreground">This section uses full width and extra large spacing (10rem vertical padding). Note: Full width sections don't have automatic horizontal padding, so content needs to add its own.</p>
    </div>
  </SectionLayout>

  <!-- Test: No spacing with custom class -->
  <SectionLayout spacing="none" class="border-t border-b border-border">
    <h2 class="text-2xl font-heading font-bold mb-4">No Spacing Section</h2>
    <p class="text-foreground">This section has no vertical padding and custom border classes.</p>
  </SectionLayout>

  <!-- Test: Responsive behavior -->
  <SectionLayout background="bg-accent-50">
    <h2 class="text-2xl font-heading font-bold mb-4">Responsive Section</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="p-4 bg-white rounded">
        <h3 class="font-semibold mb-2">Column 1</h3>
        <p class="text-sm">Responsive grid layout within section.</p>
      </div>
      <div class="p-4 bg-white rounded">
        <h3 class="font-semibold mb-2">Column 2</h3>
        <p class="text-sm">Adapts to screen size automatically.</p>
      </div>
      <div class="p-4 bg-white rounded">
        <h3 class="font-semibold mb-2">Column 3</h3>
        <p class="text-sm">Mobile: 1 col, Tablet: 2 cols, Desktop: 3 cols.</p>
      </div>
    </div>
  </SectionLayout>
</BaseLayout>
