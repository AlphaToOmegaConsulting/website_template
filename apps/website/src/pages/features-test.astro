---

<BaseLayout
  title="Features Component Test"
  description="Testing the Features section component"
  lang="fr"
>
  <div class="bg-gray-100 py-8">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-2">Features Component Test</h1>
      <p class="text-gray-600">Testing different layouts and column configurations</p>
    </div>
  </div>

  <!-- Grid Layout - 3 Columns (Default) -->
  <Features
    title="Grid Layout - 3 Columns"
    subtitle="Default grid layout with 3 columns"
    features={sampleFeatures}
    layout="grid"
    columns={3}
  />

  <!-- Grid Layout - 2 Columns -->
  <Features
    title="Grid Layout - 2 Columns"
    subtitle="Grid layout with 2 columns for better readability"
    features={sampleFeatures.slice(0, 4)}
    layout="grid"
    columns={2}
    class="bg-gray-50"
  />

  <!-- Grid Layout - 4 Columns -->
  <Features
    title="Grid Layout - 4 Columns"
    subtitle="Grid layout with 4 columns for compact display"
    features={sampleFeatures.slice(0, 4)}
    layout="grid"
    columns={4}
  />

  <!-- List Layout -->
  <Features
    title="List Layout"
    subtitle="Vertical list layout for detailed features"
    features={sampleFeatures.slice(0, 3)}
    layout="list"
    class="bg-gray-50"
  />

  <!-- Without Icons -->
  <Features
    title="Without Icons"
    subtitle="Features can work without icons too"
    features={[
      {
        title: 'Feature One',
