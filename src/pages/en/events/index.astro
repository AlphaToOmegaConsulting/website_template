---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Card from '../../../components/primitives/Card.astro';
import ButtonLink from '../../../components/primitives/ButtonLink.astro';

// Fetch all English events
const allEvents = await getCollection('events', ({ data }) => {
  return data.lang === 'en';
});

// Sort events by date (most recent first)
const sortedEvents = allEvents.sort((a, b) => {
  return b.data.date.getTime() - a.data.date.getTime();
});

// Separate upcoming and past events
const now = new Date();
const upcomingEvents = sortedEvents.filter(event => event.data.date >= now);
const pastEvents = sortedEvents.filter(event => event.data.date < now);

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

// Page metadata
const pageTitle = 'Events - Tech Women Together';
const pageDescription = 'Discover all our past and upcoming events: conferences, workshops, networking and more.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang="en"
  alternateUrls={{
    fr: '/fr/events',
    en: '/en/events'
  }}
>
  <div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <!-- Page Header -->
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Our Events
        </h1>
        <p class="text-xl text-gray-600">
          Join us for conferences, workshops and networking sessions that advance your tech career.
        </p>
      </div>

      <!-- Upcoming Events Section -->
      {upcomingEvents.length > 0 && (
        <section class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            Upcoming Events
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {upcomingEvents.map((event) => (
              <Card variant="bordered" padding="md" class="flex flex-col h-full">
                <div class="flex-grow">
                  {event.data.featured && (
                    <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-1 rounded mb-3">
                      Featured
                    </span>
                  )}
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {event.data.title}
                  </h3>
                  <div class="flex items-center text-sm text-gray-600 mb-2">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {formatDate(event.data.date)}
                  </div>
                  <div class="flex items-center text-sm text-gray-600 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {event.data.location}
                  </div>
                  <p class="text-gray-700 mb-4">
                    {event.data.description}
                  </p>
                  {event.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {event.data.tags.map((tag) => (
                        <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                {event.data.registrationUrl && (
                  <div class="mt-auto pt-4">
                    <ButtonLink
                      href={event.data.registrationUrl}
                      variant="primary"
                      size="md"
                      class="w-full"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      Register
                    </ButtonLink>
                  </div>
                )}
              </Card>
            ))}
          </div>
        </section>
      )}

      <!-- Past Events Section -->
      {pastEvents.length > 0 && (
        <section>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            Past Events
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {pastEvents.map((event) => (
              <Card variant="bordered" padding="md" class="flex flex-col h-full opacity-75">
                <div class="flex-grow">
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {event.data.title}
                  </h3>
                  <div class="flex items-center text-sm text-gray-700 mb-2">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {formatDate(event.data.date)}
                  </div>
                  <div class="flex items-center text-sm text-gray-700 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {event.data.location}
                  </div>
                  <p class="text-gray-700 mb-4">
                    {event.data.description}
                  </p>
                  {event.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {event.data.tags.map((tag) => (
                        <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </Card>
            ))}
          </div>
        </section>
      )}

      <!-- Empty State -->
      {upcomingEvents.length === 0 && pastEvents.length === 0 && (
        <div class="text-center py-12">
          <p class="text-xl text-gray-600">
            No events at the moment. Check back soon!
          </p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
