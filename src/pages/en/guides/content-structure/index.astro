---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'en';
const title = 'Content Structure - Alpha WebCore';
const description = 'Understanding content structure in Alpha WebCore';

const alternateUrls = {
  fr: '/fr/guides/content-structure',
  en: '/en/guides/content-structure'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/guides" class="text-sm text-gray-600 hover:underline mb-4 inline-block">‚Üê Back to guides</a>

    <h1 class="text-4xl font-bold mb-6">Content Structure</h1>
    <p class="text-lg text-gray-600 mb-12">
      Documentation on content organization and structure in the template.
    </p>

    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-4">Coming Soon</h2>
      <p>This page will be completed soon with detailed information about content structure.</p>
    </section>
  </main>
</BaseLayout>
