---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'en';
const title = 'UI Primitives';
const description = 'Design system base components';

const alternateUrls = {
  fr: '/fr/library/primitives',
  en: '/en/library/primitives'
};

// List of primitives (manual for Phase 1)
const primitives = [
  { name: 'Button', slug: 'button' },
  { name: 'ButtonLink', slug: 'button-link' },
  { name: 'Card', slug: 'card' },
  { name: 'Input', slug: 'input' },
  { name: 'Dialog', slug: 'dialog' },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/library" class="text-sm text-gray-600 hover:underline mb-4 inline-block">‚Üê Back to library</a>

    <h1 class="text-4xl font-bold mb-6">UI Primitives</h1>
    <p class="text-lg mb-12">Reusable base components.</p>

    <ul class="space-y-2">
      {primitives.map(p => (
        <li>
          <a href={`/en/library/primitives/${p.slug}`} class="text-blue-600 hover:underline">
            {p.name}
          </a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>
