---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Card from '@/components/primitives/Card.astro';

const lang = 'en';
const title = 'Card - Primitives';
const description = 'Card component documentation';

const alternateUrls = {
  fr: '/fr/library/primitives/card',
  en: '/en/library/primitives/card'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/library/primitives" class="text-sm text-gray-600 hover:underline mb-4 inline-block">‚Üê Back to primitives</a>

    <h1 class="text-4xl font-bold mb-6">Card</h1>
    <p class="text-lg mb-8">Content container with visual variants and padding options.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Props</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 p-3 text-left">Name</th>
              <th class="border border-gray-300 p-3 text-left">Type</th>
              <th class="border border-gray-300 p-3 text-left">Default</th>
              <th class="border border-gray-300 p-3 text-left">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">variant</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'default' | 'bordered' | 'elevated'</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'default'</code></td>
              <td class="border border-gray-300 p-3">Visual style of the card</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">padding</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'none' | 'sm' | 'md' | 'lg'</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'md'</code></td>
              <td class="border border-gray-300 p-3">Inner spacing</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Variants</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-lg font-medium mb-3">Default</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Card variant="default">
              <h3 class="text-xl font-semibold mb-2">Default Card</h3>
              <p class="text-gray-600">Simple white background, no border or shadow.</p>
            </Card>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card variant="default"&gt;...&lt;/Card&gt;</code></pre>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-3">Bordered</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Card variant="bordered">
              <h3 class="text-xl font-semibold mb-2">Bordered Card</h3>
              <p class="text-gray-600">White background with subtle gray border.</p>
            </Card>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card variant="bordered"&gt;...&lt;/Card&gt;</code></pre>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-3">Elevated</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Card variant="elevated">
              <h3 class="text-xl font-semibold mb-2">Elevated Card</h3>
              <p class="text-gray-600">White background with shadow for depth.</p>
            </Card>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card variant="elevated"&gt;...&lt;/Card&gt;</code></pre>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Padding options</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium mb-3">None</h3>
          <Card variant="bordered" padding="none">
            <div class="bg-gray-100 p-4">Padding: none (manually managed)</div>
          </Card>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card padding="none"&gt;...&lt;/Card&gt;</code></pre>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-3">Small (p-4)</h3>
          <Card variant="bordered" padding="sm"><p>Padding: sm</p></Card>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card padding="sm"&gt;...&lt;/Card&gt;</code></pre>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-3">Medium (p-6) - Default</h3>
          <Card variant="bordered" padding="md"><p>Padding: md</p></Card>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card padding="md"&gt;...&lt;/Card&gt;</code></pre>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-3">Large (p-8)</h3>
          <Card variant="bordered" padding="lg"><p>Padding: lg</p></Card>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Card padding="lg"&gt;...&lt;/Card&gt;</code></pre>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2 text-gray-700">
        <li>Versatile container for grouping content</li>
        <li>Rounded corners with <code class="text-sm bg-gray-100 px-1 rounded">rounded-lg</code></li>
        <li><code class="text-sm bg-gray-100 px-1 rounded">padding="none"</code> useful for full-width images</li>
        <li>Compatible with all child components via <code class="text-sm bg-gray-100 px-1 rounded">&lt;slot /&gt;</code></li>
      </ul>
    </section>
  </main>
</BaseLayout>
