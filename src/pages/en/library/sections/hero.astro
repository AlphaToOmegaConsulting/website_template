---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';

const lang = 'en';
const title = 'Hero - Sections';
const description = 'Hero section documentation';

const alternateUrls = {
  fr: '/fr/library/sections/hero',
  en: '/en/library/sections/hero'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/library/sections" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Back to sections</a>

    <h1 class="text-4xl font-bold mb-6">Hero</h1>
    <p class="text-lg mb-8">Main header section to present key page content.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Props</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 p-3 text-left">Name</th>
              <th class="border border-gray-300 p-3 text-left">Type</th>
              <th class="border border-gray-300 p-3 text-left">Required</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 p-3"><code>title</code></td>
              <td class="border border-gray-300 p-3">string</td>
              <td class="border border-gray-300 p-3">✓</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>subtitle</code></td>
              <td class="border border-gray-300 p-3">string</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>cta</code></td>
              <td class="border border-gray-300 p-3">{'{'} label, href, variant? {'}'}</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>image</code></td>
              <td class="border border-gray-300 p-3">{'{'} src, alt {'}'}</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>variant</code></td>
              <td class="border border-gray-300 p-3">'default' | 'centered'</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Usage example</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Hero from '@/components/sections/Hero.astro';
---

&lt;Hero
  title="Main title"
  subtitle="Descriptive subtitle"
  variant="centered"
  cta={'{{'}
    label: "Get started",
    href: "/signup",
    variant: "primary"
  {'}}'}
  image={'{{'}
    src: "/hero-image.jpg",
    alt: "Description"
  {'}}'}
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Variants</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li><strong>default</strong>: Asymmetric layout with content left and image right</li>
        <li><strong>centered</strong>: Centered content, ideal for landing pages</li>
      </ul>
    </section>
  </main>
</BaseLayout>
