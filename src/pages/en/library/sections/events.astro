---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Events from '@/components/sections/Events.astro';
import { getCollection } from 'astro:content';

const lang = 'en';

// Get 2 EN events for preview
const allEvents = await getCollection('events', (entry) => entry.id.startsWith('en/'));
const eventsForPreview = allEvents.slice(0, 2);

const title = 'Events - Sections';
const description = 'Events section documentation';

const alternateUrls = {
  fr: '/fr/library/sections/events',
  en: '/en/library/sections/events'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Events</h1>
    <p class="text-lg mb-8">Section to display a list of events with filters and navigation.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Usage example</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Events from '@/components/sections/Events.astro';
import {'{'} getCollection {'}'} from 'astro:content';

const events = await getCollection('events');
---

&lt;Events
  title="Upcoming events"
  events={'{{'}events{'}}'}
  showFilters={'{{'}true{'}}'}
  layout="grid"
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Used on /events page to display event list</li>
        <li>Support for category and date filters</li>
        <li>Grid or list layout</li>
        <li>Integration with Astro content collections</li>
      </ul>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Visual Previews</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-3">Events list</h3>
          <p class="text-sm text-gray-600 mb-4">Display of events with filters.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <Events
              title="Upcoming events"
              events={eventsForPreview}
              showFilters={true}
              layout="grid"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
