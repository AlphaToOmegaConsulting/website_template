  {
    name: 'Features',
    slug: 'features',
    description: 'Features presentation',
    Component: Features
  },
  {
    name: 'About',
    slug: 'about',
    description: 'About organization section',
    Component: About
  },
  {
    name: 'Events',
    slug: 'events',
    description: 'Events list with filters',
