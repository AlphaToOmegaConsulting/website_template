---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'en';
const title = 'About - Sections';
const description = 'About section documentation';

const alternateUrls = {
  fr: '/fr/library/sections/about',
  en: '/en/library/sections/about'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/library/sections" class="text-sm text-gray-600 hover:underline mb-4 inline-block">‚Üê Back to sections</a>

    <h1 class="text-4xl font-bold mb-6">About</h1>
    <p class="text-lg mb-8">"About" section to present the organization or project.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Usage example</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import About from '@/components/sections/About.astro';
---

&lt;About
  title="About us"
  description="Descriptive text..."
  image={{
    src: "/about.jpg",
    alt: "Our team"
  }}
  stats={[
    { value: "10+", label: "Years of experience" },
    { value: "500+", label: "Happy clients" },
    { value: "50+", label: "Completed projects" }
  ]}
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Flexible section to present your story</li>
        <li>Optional support for key statistics</li>
        <li>Optional image for illustration</li>
      </ul>
    </section>
  </main>
</BaseLayout>
