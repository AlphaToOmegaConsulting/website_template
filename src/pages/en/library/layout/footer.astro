---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Footer from '@/components/Footer.astro';

const lang = 'en';
const title = 'Footer - Layout';
const description = 'Footer component documentation';

const alternateUrls = {
  fr: '/fr/library/layout/footer',
  en: '/en/library/layout/footer'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-5xl">
    <h1 class="text-4xl font-bold mb-4">Footer</h1>
    <p class="text-xl text-gray-600 mb-12">Site footer with links, social media, and copyright information</p>

    <!-- Props Table -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Props</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th class="border border-gray-300 px-4 py-3 text-left font-semibold">Name</th>
              <th class="border border-gray-300 px-4 py-3 text-left font-semibold">Type</th>
              <th class="border border-gray-300 px-4 py-3 text-left font-semibold">Required</th>
              <th class="border border-gray-300 px-4 py-3 text-left font-semibold">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 px-4 py-3 font-mono text-sm">lang</td>
              <td class="border border-gray-300 px-4 py-3 font-mono text-sm">'fr' | 'en'</td>
              <td class="border border-gray-300 px-4 py-3">Yes</td>
              <td class="border border-gray-300 px-4 py-3">Current language for footer content and links</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Visual Example -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Visual Example</h2>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
        <p class="text-gray-700">
          <strong>Note:</strong> The Footer component is visible at the bottom of this page. Scroll down to see it in action.
        </p>
      </div>
      <div class="border rounded-lg overflow-hidden">
        <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 800 120'%3E%3Crect fill='%2311182' width='800' height='120'/%3E%3Ctext x='50' y='40' font-family='Arial' font-size='14' font-weight='bold' fill='%23d1d5db'%3ELinks%3C/text%3E%3Ctext x='50' y='70' font-family='Arial' font-size='12' fill='%239ca3af'%3EHome%3C/text%3E%3Ctext x='50' y='90' font-family='Arial' font-size='12' fill='%239ca3af'%3ELibrary%3C/text%3E%3Ctext x='350' y='40' font-family='Arial' font-size='14' font-weight='bold' fill='%23d1d5db'%3ESocial%3C/text%3E%3Ctext x='350' y='70' font-family='Arial' font-size='12' fill='%239ca3af'%3ETwitter%3C/text%3E%3Ctext x='350' y='90' font-family='Arial' font-size='12' fill='%239ca3af'%3EGitHub%3C/text%3E%3Ctext x='400' y='110' font-family='Arial' font-size='11' fill='%236b7280' text-anchor='middle'%3EÂ© 2025 All rights reserved%3C/text%3E%3C/svg%3E" alt="Footer component preview" class="w-full" />
      </div>
    </section>

    <!-- Code Examples -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Usage Examples</h2>

      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold mb-3">Basic Usage</h3>
          <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>{`---
import Footer from '@/components/Footer.astro';
---

<Footer lang="en" />`}</code></pre>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-3">Complete Page Example</h3>
          <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>{`---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const lang = 'en';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>Page Title</title>
  </head>
  <body>
    <Header lang={lang} />

    <main>
      <!-- Page content -->
    </main>

    <Footer lang={lang} />
  </body>
</html>`}</code></pre>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-3">French Version</h3>
          <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>{`<Footer lang="fr" />`}</code></pre>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="border rounded-lg p-4">
          <h3 class="font-semibold mb-2">Multilingual</h3>
          <p class="text-sm text-gray-600">Automatic content translation based on lang prop</p>
        </div>
        <div class="border rounded-lg p-4">
          <h3 class="font-semibold mb-2">Navigation Links</h3>
          <p class="text-sm text-gray-600">Organized footer links for site navigation</p>
        </div>
        <div class="border rounded-lg p-4">
          <h3 class="font-semibold mb-2">Social Media</h3>
          <p class="text-sm text-gray-600">Links to social media profiles with icons</p>
        </div>
        <div class="border rounded-lg p-4">
          <h3 class="font-semibold mb-2">Copyright Notice</h3>
          <p class="text-sm text-gray-600">Dynamic year in copyright notice</p>
        </div>
      </div>
    </section>

    <!-- Structure -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Footer Structure</h2>
      <div class="space-y-4">
        <div class="border-l-4 border-blue-500 pl-4">
          <h3 class="font-semibold mb-2">Links Section</h3>
          <p class="text-gray-600 text-sm">Primary site navigation links organized in columns</p>
        </div>
        <div class="border-l-4 border-blue-500 pl-4">
          <h3 class="font-semibold mb-2">Social Section</h3>
          <p class="text-gray-600 text-sm">Social media links (Twitter, LinkedIn, GitHub)</p>
        </div>
        <div class="border-l-4 border-blue-500 pl-4">
          <h3 class="font-semibold mb-2">Copyright</h3>
          <p class="text-gray-600 text-sm">Copyright notice with current year</p>
        </div>
      </div>
    </section>

    <!-- Notes -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">Notes</h2>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 space-y-4">
        <div>
          <h3 class="font-semibold mb-2">Accessibility</h3>
          <ul class="list-disc list-inside space-y-1 text-gray-700">
            <li>Semantic HTML with <code class="bg-white px-2 py-1 rounded">&lt;footer&gt;</code> element</li>
            <li>Proper link text for screen readers</li>
            <li>High contrast text for readability</li>
            <li>Organized with landmark roles</li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Best Practices</h3>
          <ul class="list-disc list-inside space-y-1 text-gray-700">
            <li>Keep footer links relevant and up-to-date</li>
            <li>Update social media links in the component file</li>
            <li>Copyright year updates automatically</li>
            <li>Maintains consistent styling with site theme</li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Customization</h3>
          <ul class="list-disc list-inside space-y-1 text-gray-700">
            <li>Footer links are defined in the component file</li>
            <li>Social media links can be customized</li>
            <li>Styling uses Tailwind utility classes</li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
