---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'en';
const title = 'Marketing';
const description = 'Marketing demo pages';

const alternateUrls = {
  fr: '/fr/demo/marketing',
  en: '/en/demo/marketing'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/en/demo" class="text-sm text-gray-600 hover:underline mb-4 inline-block">‚Üê Back to demos</a>

    <h1 class="text-4xl font-bold mb-6">Marketing</h1>
    <p class="text-lg text-gray-600 mb-12">
      Demo pages for marketing.
    </p>

    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-4">Coming Soon</h2>
      <p>This section will be completed with marketing page examples.</p>
    </section>
  </main>
</BaseLayout>
