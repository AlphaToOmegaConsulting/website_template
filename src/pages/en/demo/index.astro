---
import { getEntry } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';

// Fetch page metadata
const pageData = await getEntry('pages', 'en/demo');
const heroData = await getEntry('sections', 'hero-demo-en');

const lang = 'en';
const alternateUrls = {
  fr: '/fr/demo',
  en: '/en/demo'
};
---

<BaseLayout
  title={pageData.data.title}
  description={pageData.data.description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  {heroData && (
    <Hero
      title={heroData.data.data.title}
      subtitle={heroData.data.data.subtitle}
      variant={heroData.data.data.variant}
    />
  )}

  <section class="container mx-auto px-4 py-16 text-center">
    <p class="text-gray-600 max-w-2xl mx-auto">
      This is a demonstration placeholder page. You can customize it by adding sections from the Library.
    </p>
  </section>
</BaseLayout>
