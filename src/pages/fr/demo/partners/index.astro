---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';
import Card from '@/components/primitives/Card.astro';
import CTA from '@/components/sections/CTA.astro';

const lang = 'fr';
const title = 'Démo Partenaires';
const description = 'La confiance des leaders de l\'industrie';

const alternateUrls = {
  fr: '/fr/demo/partners',
  en: '/en/demo/partners'
};

// Simplified partners data
const partners = [
  { name: 'TechCorp', description: 'Leader Solutions Cloud' },
  { name: 'InnovateLab', description: 'Développement Produits' },
  { name: 'DataSolutions', description: 'Business Intelligence' },
  { name: 'DevHub', description: 'Plateforme Développeurs' },
  { name: 'CloudFirst', description: 'Infrastructure Cloud' },
  { name: 'CodeAcademy', description: 'Formation en Ligne' },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <Hero
    title="La Confiance des Leaders de l'Industrie"
    subtitle="Nous collaborons avec des organisations innovantes pour stimuler l'innovation et la croissance"
    variant="centered"
  />

  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Nos Partenaires
        </h2>
        <p class="text-lg text-gray-600">
          Des entreprises qui partagent notre vision et nos valeurs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {partners.map((partner) => (
          <Card variant="bordered" padding="md" class="text-center hover:shadow-lg transition">
            <div class="flex flex-col items-center">
              <div class="w-24 h-24 bg-gray-100 rounded-lg mb-4 flex items-center justify-center">
                <span class="text-2xl font-bold text-gray-400">{partner.name.substring(0, 2)}</span>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                {partner.name}
              </h3>
              <p class="text-sm text-gray-600">
                {partner.description}
              </p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <CTA
    title="Devenez Partenaire"
    description="Rejoignez notre réseau de partenaires et aidez-nous à construire l'avenir ensemble"
    primaryCta={{
      label: "Nous Contacter",
      href: "#"
    }}
    secondaryCta={{
      label: "En Savoir Plus",
      href: "#"
    }}
  />
</BaseLayout>
