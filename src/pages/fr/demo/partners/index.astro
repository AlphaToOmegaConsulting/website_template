---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Card from '@/components/primitives/Card.astro';
import ButtonLink from '@/components/primitives/ButtonLink.astro';

// Partners data (could be moved to a data collection later)
const partners = [
  {
    id: 'partner-1',
    name: 'TechCorp',
    logo: '/images/partners/techcorp.svg',
    description: 'Leader mondial dans les solutions cloud et l\'intelligence artificielle.',
    website: 'https://example.com/techcorp',
    tier: 'platinum',
  },
  {
    id: 'partner-2',
    name: 'InnovateLab',
    logo: '/images/partners/innovatelab.svg',
    description: 'Startup innovante spécialisée dans le développement de produits tech.',
    website: 'https://example.com/innovatelab',
    tier: 'gold',
  },
  {
    id: 'partner-3',
    name: 'DataSolutions',
    logo: '/images/partners/datasolutions.svg',
    description: 'Expert en analyse de données et business intelligence.',
    website: 'https://example.com/datasolutions',
    tier: 'gold',
  },
  {
    id: 'partner-4',
    name: 'DevHub',
    logo: '/images/partners/devhub.svg',
    description: 'Plateforme collaborative pour développeurs et développeuses.',
    website: 'https://example.com/devhub',
    tier: 'silver',
  },
  {
    id: 'partner-5',
    name: 'CloudFirst',
    logo: '/images/partners/cloudfirst.svg',
    description: 'Services cloud et infrastructure pour entreprises modernes.',
    website: 'https://example.com/cloudfirst',
    tier: 'silver',
  },
  {
    id: 'partner-6',
    name: 'CodeAcademy',
    logo: '/images/partners/codeacademy.svg',
    description: 'Formation en ligne pour apprendre la programmation.',
    website: 'https://example.com/codeacademy',
    tier: 'silver',
  },
];

// Group partners by tier
const platinumPartners = partners.filter(p => p.tier === 'platinum');
const goldPartners = partners.filter(p => p.tier === 'gold');
const silverPartners = partners.filter(p => p.tier === 'silver');

// Page metadata
const pageTitle = 'Nos Partenaires - Tech Women Together';
const pageDescription = 'Découvrez les entreprises et organisations qui soutiennent notre mission de promouvoir la diversité dans la tech.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang="fr"
  alternateUrls={{
    fr: '/fr/demo/partners',
    en: '/en/demo/partners'
  }}
>
  <div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <!-- Page Header -->
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Nos Partenaires
        </h1>
        <p class="text-xl text-gray-600">
          Nous sommes fiers de collaborer avec des entreprises et organisations qui partagent notre vision d'une tech plus inclusive et diverse.
        </p>
      </div>

      <!-- Platinum Partners -->
      {platinumPartners.length > 0 && (
        <section class="mb-16">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">
              Partenaires Platine
            </h2>
            <p class="text-gray-600">Nos partenaires stratégiques majeurs</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {platinumPartners.map((partner) => (
              <Card variant="elevated" padding="lg" class="text-center">
                <div class="flex flex-col items-center">
                  <div class="w-32 h-32 bg-gray-200 rounded-lg mb-4 flex items-center justify-center">
                    <span class="text-gray-700 text-sm">Logo</span>
                  </div>
                  <h3 class="text-2xl font-semibold text-gray-900 mb-3">
                    {partner.name}
                  </h3>
                  <p class="text-gray-700 mb-6">
                    {partner.description}
                  </p>
                  <ButtonLink 
                    href={partner.website}
                    variant="primary" 
                    size="md"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Visiter le site
                  </ButtonLink>
                </div>
              </Card>
            ))}
          </div>
        </section>
      )}

      <!-- Gold Partners -->
      {goldPartners.length > 0 && (
        <section class="mb-16">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">
              Partenaires Or
            </h2>
            <p class="text-gray-600">Nos partenaires premium</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {goldPartners.map((partner) => (
              <Card variant="bordered" padding="md" class="text-center">
                <div class="flex flex-col items-center">
                  <div class="w-24 h-24 bg-gray-200 rounded-lg mb-3 flex items-center justify-center">
                    <span class="text-gray-700 text-xs">Logo</span>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {partner.name}
                  </h3>
                  <p class="text-gray-700 mb-4 text-sm">
                    {partner.description}
                  </p>
                  <ButtonLink 
                    href={partner.website}
                    variant="secondary" 
                    size="sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    En savoir plus
                  </ButtonLink>
                </div>
              </Card>
            ))}
          </div>
        </section>
      )}

      <!-- Silver Partners -->
      {silverPartners.length > 0 && (
        <section class="mb-16">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">
              Partenaires Argent
            </h2>
            <p class="text-gray-600">Nos partenaires soutiens</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {silverPartners.map((partner) => (
              <Card variant="bordered" padding="md" class="text-center">
                <div class="flex flex-col items-center">
                  <div class="w-20 h-20 bg-gray-200 rounded-lg mb-3 flex items-center justify-center">
                    <span class="text-gray-700 text-xs">Logo</span>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">
                    {partner.name}
                  </h3>
                  <p class="text-gray-700 mb-4 text-sm">
                    {partner.description}
                  </p>
                  <ButtonLink 
                    href={partner.website}
                    variant="ghost" 
                    size="sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Visiter
                  </ButtonLink>
                </div>
              </Card>
            ))}
          </div>
        </section>
      )}

      <!-- CTA Section -->
      <section class="bg-blue-50 rounded-lg p-8 md:p-12 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Devenez Partenaire
        </h2>
        <p class="text-lg text-gray-700 mb-6 max-w-2xl mx-auto">
          Rejoignez notre réseau de partenaires et contribuez à construire une communauté tech plus diverse et inclusive.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <ButtonLink 
            href="mailto:partners@example.com"
            variant="primary" 
            size="lg"
          >
            Nous contacter
          </ButtonLink>
          <ButtonLink 
            href="/fr/partners/info"
            variant="secondary" 
            size="lg"
          >
            En savoir plus
          </ButtonLink>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
