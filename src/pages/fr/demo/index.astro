---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { buildUrl } from '@/utils/url';

const lang = 'fr';
const title = 'Démo';
const description = 'Pages de démonstration du template';

const alternateUrls = {
  fr: '/fr/demo',
  en: '/en/demo'
};

const demos = [
  { title: 'Marketing', slug: 'marketing', description: 'Pages marketing de démonstration' },
  { title: 'Événements', slug: 'events', description: 'Page de listing d\'événements' },
  { title: 'Partenaires', slug: 'partners', description: 'Page de présentation des partenaires' },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Pages de démonstration</h1>
    <p class="text-lg mb-12">Exemples de pages construites avec le template.</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {demos.map(d => (
        <a href={buildUrl(`/fr/demo/${d.slug}`)} class="block p-6 border rounded-lg hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2">{d.title}</h2>
          <p class="text-sm text-gray-600">{d.description}</p>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>
