---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';
import Events from '@/components/sections/Events.astro';
import CTA from '@/components/sections/CTA.astro';

const lang = 'fr';
const title = 'Démo Événements';
const description = 'Découvrez nos événements et ateliers à venir';

const alternateUrls = {
  fr: '/fr/demo/events',
  en: '/en/demo/events'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <Hero
    title="Rejoignez Nos Événements Communautaires"
    subtitle="Connectez-vous avec des professionnels partageant les mêmes idées lors de nos ateliers, conférences et sessions de networking"
    variant="centered"
    cta={{
      label: "Voir Tous les Événements",
      href: "#events",
      variant: "primary"
    }}
  />

  <Events lang={lang} />

  <CTA
    title="Ne Manquez Rien"
    description="Inscrivez-vous à notre newsletter pour rester informé des événements à venir et des opportunités exclusives"
    primaryCta={{
      label: "S'inscrire Maintenant",
      href: "#"
    }}
  />
</BaseLayout>
