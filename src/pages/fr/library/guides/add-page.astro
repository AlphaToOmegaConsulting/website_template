---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'fr';
const title = 'Ajouter une page - Guide';
const description = 'Guide étape par étape pour ajouter une nouvelle page';

const alternateUrls = {
  fr: '/fr/library/guides/add-page',
  en: '/en/library/guides/add-page'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/fr/library/guides" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Retour aux guides</a>

    <h1 class="text-4xl font-bold mb-6">Comment ajouter une page</h1>

    <div class="prose prose-lg max-w-none">
      <p class="text-lg text-gray-600 mb-8">
        Contenu du guide à venir en Phase 3.
      </p>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Sections prévues :</h2>
        <ul class="list-disc pl-6 space-y-2">
          <li>Étape 1 : Créer les fichiers de routing (FR + EN)</li>
          <li>Étape 2 : Structure de base avec BaseLayout</li>
          <li>Étape 3 : Ajouter le contenu</li>
          <li>Étape 4 : Ajouter la navigation</li>
          <li>Étape 5 : Tester et valider</li>
          <li>Bonnes pratiques</li>
        </ul>
      </section>
    </div>
  </main>
</BaseLayout>
