---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'fr';
const title = 'Guides';
const description = 'Guides pratiques pour utiliser Alpha WebCore';

const alternateUrls = {
  fr: '/fr/library/guides',
  en: '/en/library/guides'
};

// Liste des guides
const guides = [
  { title: 'Utilisation du site', slug: 'usage', description: 'Vue d\'ensemble et workflows courants' },
  { title: 'Ajouter une page', slug: 'add-page', description: 'Comment créer une nouvelle page' },
  { title: 'Ajouter une section', slug: 'add-section', description: 'Comment créer un nouveau bloc de contenu' },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/fr/library" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Retour à la bibliothèque</a>

    <h1 class="text-4xl font-bold mb-6">Guides</h1>
    <p class="text-lg mb-12">Guides pratiques pour utiliser et étendre le template.</p>

    <div class="space-y-4">
      {guides.map(g => (
        <a href={`/fr/library/guides/${g.slug}`} class="block p-6 border rounded-lg hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2">{g.title}</h2>
          <p class="text-sm text-gray-600">{g.description}</p>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>
