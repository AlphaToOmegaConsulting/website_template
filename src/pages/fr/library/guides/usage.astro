---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'fr';
const title = 'Utilisation du site - Guide';
const description = 'Guide complet d\'utilisation du template Alpha WebCore';

const alternateUrls = {
  fr: '/fr/library/guides/usage',
  en: '/en/library/guides/usage'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/fr/library/guides" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Retour aux guides</a>

    <h1 class="text-4xl font-bold mb-6">Guide d'utilisation</h1>

    <div class="prose prose-lg max-w-none">
      <p class="text-lg text-gray-600 mb-8">
        Contenu du guide à venir en Phase 3.
      </p>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Sections prévues :</h2>
        <ul class="list-disc pl-6 space-y-2">
          <li>Introduction et philosophie du template</li>
          <li>Architecture des dossiers</li>
          <li>Routing FR/EN</li>
          <li>Content collections</li>
          <li>Composants (primitives vs sections)</li>
          <li>Workflows courants</li>
          <li>Conventions de code</li>
          <li>Dépannage</li>
        </ul>
      </section>
    </div>
  </main>
</BaseLayout>
