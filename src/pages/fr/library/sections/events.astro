---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Events from '@/components/sections/Events.astro';
import { getCollection } from 'astro:content';

const lang = 'fr';

// Récupérer 2 événements FR pour l'aperçu
const allEvents = await getCollection('events', (entry) => entry.id.startsWith('fr/'));
const eventsForPreview = allEvents.slice(0, 2);
const title = 'Events - Sections';
const description = 'Documentation de la section Events';

const alternateUrls = {
  fr: '/fr/library/sections/events',
  en: '/en/library/sections/events'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Events</h1>
    <p class="text-lg mb-8">Section pour afficher une liste d'événements avec filtres et navigation.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Exemple d'usage</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Events from '@/components/sections/Events.astro';
import {'{'} getCollection {'}'} from 'astro:content';

const events = await getCollection('events');
---

&lt;Events
  title="Événements à venir"
  events={'{{'}events{'}}'} 
  showFilters={'{{'}true{'}}'} 
  layout="grid"
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Utilisé sur la page /events pour afficher la liste des événements</li>
        <li>Support des filtres par catégorie et date</li>
        <li>Layout grid ou liste</li>
        <li>Intégration avec content collections Astro</li>
      </ul>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Aperçus visuels</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-3">Liste d'événements</h3>
          <p class="text-sm text-gray-600 mb-4">Affichage des événements avec filtres.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <Events
              title="Événements à venir"
              events={eventsForPreview}
              showFilters={true}
              layout="grid"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
