---
import BaseLayout from '@/layouts/BaseLayout.astro';
import About from '@/components/sections/About.astro';

const lang = 'fr';
const title = 'About - Sections';
const description = 'Documentation de la section About';

const alternateUrls = {
  fr: '/fr/library/sections/about',
  en: '/en/library/sections/about'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/fr/library/sections" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Retour aux sections</a>

    <h1 class="text-4xl font-bold mb-6">About</h1>
    <p class="text-lg mb-8">Section "À propos" pour présenter l'organisation ou le projet.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Exemple d'usage</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import About from '@/components/sections/About.astro';
---

&lt;About
  title="À propos de nous"
  description="Texte descriptif..."
  image={{
    src: "/about.jpg",
    alt: "Notre équipe"
  }}
  stats={[
    { value: "10+", label: "Années d'expérience" },
    { value: "500+", label: "Clients satisfaits" },
    { value: "50+", label: "Projets réalisés" }
  ]}
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Section flexible pour présenter votre histoire</li>
        <li>Support optionnel de statistiques clés</li>
        <li>Image optionnelle pour illustration</li>
      </ul>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Aperçus visuels</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-3">Section About complète</h3>
          <p class="text-sm text-gray-600 mb-4">Présentation avec statistiques clés.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <About
              title="À propos de notre équipe"
              description="Nous sommes une équipe passionnée dédiée à créer des solutions web modernes et performantes. Depuis plus de 10 ans, nous accompagnons nos clients dans la réalisation de leurs projets digitaux."
              stats={[
                { value: "10+", label: "Années d'expérience" },
                { value: "500+", label: "Clients satisfaits" },
                { value: "50+", label: "Projets réalisés" }
              ]}
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
