---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Team from '@/components/sections/Team.astro';

const lang = 'fr';
const title = 'Team - Sections';
const description = 'Documentation de la section Team';

const alternateUrls = {
  fr: '/fr/library/sections/team',
  en: '/en/library/sections/team'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Team</h1>
    <p class="text-lg mb-8">Section pour présenter les membres de l'équipe.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Exemple d'usage</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Team from '@/components/sections/Team.astro';
---

&lt;Team
  title="Notre équipe"
  subtitle="Les personnes derrière le projet"
  authors={[
    {
      id: "alice",
      name: "Alice Dupont",
      role: "CEO & Fondatrice",
      avatar: "/team/alice.jpg",
      bio: "10 ans d'expérience...",
      social: {
        linkedin: "alice",
        twitter: "alice"
      }
    },
    {
      id: "bob",
      name: "Bob Martin",
      role: "CTO",
      avatar: "/team/bob.jpg",
      bio: "Expert technique"
    }
  ]}
  columns={3}
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Affichage en grille des membres de l'équipe</li>
        <li>Support des liens sociaux (LinkedIn, Twitter, etc.)</li>
        <li>Bio optionnelle pour chaque membre</li>
        <li>Layout flexible (2 ou 3 colonnes)</li>
      </ul>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Aperçus visuels</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-3">Grille de 3 membres</h3>
          <p class="text-sm text-gray-600 mb-4">Présentation d'équipe avec 3 colonnes.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <Team
              title="Notre équipe"
              subtitle="Les talents qui font la différence"
              columns={3}
              authors={[
                {
                  id: "alice",
                  name: "Alice Dupont",
                  role: "CEO & Fondatrice",
                  avatar: "https://ui-avatars.com/api/?name=Alice+Dupont&background=4F46E5&color=fff&size=256",
                  bio: "Experte en stratégie digitale avec plus de 10 ans d'expérience."
                },
                {
                  id: "bob",
                  name: "Bob Martin",
                  role: "CTO",
                  avatar: "https://ui-avatars.com/api/?name=Bob+Martin&background=4F46E5&color=fff&size=256",
                  bio: "Passionné de technologie et d'architecture logicielle."
                },
                {
                  id: "clara",
                  name: "Clara Rousseau",
                  role: "Designer UX/UI",
                  avatar: "https://ui-avatars.com/api/?name=Clara+Rousseau&background=4F46E5&color=fff&size=256",
                  bio: "Créative et orientée utilisateur, elle conçoit des expériences mémorables."
                }
              ]}
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
