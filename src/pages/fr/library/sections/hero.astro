---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';

const lang = 'fr';
const title = 'Hero - Sections';
const description = 'Documentation de la section Hero';

const alternateUrls = {
  fr: '/fr/library/sections/hero',
  en: '/en/library/sections/hero'
};
---

<BaseLayout title={title} description={description} lang={lang} alternateUrls={alternateUrls}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Hero</h1>
    <p class="text-lg mb-8">Section d'en-tête principale pour présenter le contenu clé d'une page.</p>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Props</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 p-3 text-left">Nom</th>
              <th class="border border-gray-300 p-3 text-left">Type</th>
              <th class="border border-gray-300 p-3 text-left">Requis</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 p-3"><code>title</code></td>
              <td class="border border-gray-300 p-3">string</td>
              <td class="border border-gray-300 p-3">✓</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>subtitle</code></td>
              <td class="border border-gray-300 p-3">string</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>cta</code></td>
              <td class="border border-gray-300 p-3">{'{'} label, href, variant? {'}'}</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>image</code></td>
              <td class="border border-gray-300 p-3">{'{'} src, alt {'}'}</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code>variant</code></td>
              <td class="border border-gray-300 p-3">'default' | 'centered'</td>
              <td class="border border-gray-300 p-3">-</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Exemple d'usage</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Hero from '@/components/sections/Hero.astro';
---

&lt;Hero
  title="Titre principal"
  subtitle="Sous-titre descriptif"
  variant="centered"
  cta={'{{'}
    label: "Commencer",
    href: "/signup",
    variant: "primary"
  {'}}'}
  image={'{{'}
    src: "/hero-image.jpg",
    alt: "Description"
  {'}}'}
/&gt;</code></pre>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Variantes</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li><strong>default</strong> : Layout asymétrique avec contenu à gauche et image à droite</li>
        <li><strong>centered</strong> : Contenu centré, idéal pour les pages de destination</li>
      </ul>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Aperçus visuels</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-3">Variante : Default</h3>
          <p class="text-sm text-gray-600 mb-4">Hero avec layout asymétrique et bouton d'action.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <Hero
              title="Bienvenue sur Alpha WebCore"
              subtitle="Un template Astro moderne conçu pour la simplicité et la performance"
              variant="default"
              cta={{
                label: "Découvrir",
                href: "#",
                variant: "primary"
              }}
            />
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-3">Variante : Centered</h3>
          <p class="text-sm text-gray-600 mb-4">Hero avec contenu centré, idéal pour les pages de destination.</p>
          <div class="border rounded-xl overflow-hidden bg-white shadow-sm">
            <Hero
              title="Créez des sites web exceptionnels"
              subtitle="Modularité, granularité et neutralité au cœur du développement"
              variant="centered"
              cta={{
                label: "Commencer maintenant",
                href: "#",
                variant: "primary"
              }}
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
