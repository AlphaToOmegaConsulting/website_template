---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/primitives/Button.astro';
import ButtonLink from '@/components/primitives/ButtonLink.astro';
import Card from '@/components/primitives/Card.astro';
import Input from '@/components/primitives/Input.astro';
import Dialog from '@/components/primitives/Dialog.astro';

const lang = 'fr';
const title = 'Primitives UI';
const description = 'Composants de base du design system';

const alternateUrls = {
  fr: '/fr/library/primitives',
  en: '/en/library/primitives'
};

const primitives = [
  {
    name: 'Button',
    slug: 'button',
    description: 'Composant de base pour les actions'
  },
  {
    name: 'ButtonLink',
    slug: 'button-link',
    description: 'Bouton avec apparence de lien'
  },
  {
    name: 'Card',
    slug: 'card',
    description: 'Container pour organiser le contenu'
  },
  {
    name: 'Input',
    slug: 'input',
    description: 'Champ de saisie de texte'
  },
  {
    name: 'Dialog',
    slug: 'dialog',
    description: 'Fenêtre modale pour interactions'
  },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <div class="mb-8 container mx-auto px-4 max-w-6xl">
    <h1 class="text-4xl font-bold mt-4 mb-2">Primitives UI</h1>
    <p class="text-lg text-gray-600">Composants de base réutilisables.</p>
  </div>

  <div class="w-full">
    {primitives.map((p, index) => (
      <div class="py-12">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold">{p.name}</h2>
            <a
              href={`/fr/library/primitives/${p.slug}`}
              class="text-blue-600 hover:underline font-medium"
            >
              Voir détails →
            </a>
          </div>
          <p class="text-gray-600 mb-8">{p.description}</p>

          <div class="bg-gray-50 p-12 rounded-lg flex items-center justify-center">
            {p.slug === 'button' && (
              <Button variant="primary" size="md">Exemple de Bouton</Button>
            )}
            {p.slug === 'button-link' && (
              <ButtonLink href="#" variant="secondary" size="md">Exemple de Lien Bouton</ButtonLink>
            )}
            {p.slug === 'card' && (
              <Card variant="bordered" padding="md" class="w-full max-w-md">
                <h3 class="text-xl font-semibold mb-2">Titre de la Carte</h3>
                <p class="text-gray-600">Ceci est un exemple de contenu de carte. Les cartes sont utiles pour organiser des informations connexes dans des sections contenues.</p>
              </Card>
            )}
            {p.slug === 'input' && (
              <Input
                type="text"
                placeholder="Entrez votre texte ici..."
                class="w-full max-w-md"
              />
            )}
            {p.slug === 'dialog' && (
              <div class="text-center space-y-4">
                <p class="text-gray-600">Les dialogues modaux fournissent des interactions ciblées</p>
                <p class="text-sm text-gray-500">(Voir la page de détails pour une démo interactive)</p>
              </div>
            )}
          </div>
        </div>
        {index < primitives.length - 1 && (
          <hr class="mt-12 border-gray-200" />
        )}
      </div>
    ))}
  </div>
</BaseLayout>
