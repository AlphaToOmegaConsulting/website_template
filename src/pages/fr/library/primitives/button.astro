---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/primitives/Button.astro';

const lang = 'fr';
const title = 'Button - Primitives';
const description = 'Documentation du composant Button';

const alternateUrls = {
  fr: '/fr/library/primitives/button',
  en: '/en/library/primitives/button'
};
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Button</h1>
    <p class="text-lg mb-8">Composant bouton avec variantes, tailles et états.</p>

    <!-- Props -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Props</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 p-3 text-left">Nom</th>
              <th class="border border-gray-300 p-3 text-left">Type</th>
              <th class="border border-gray-300 p-3 text-left">Défaut</th>
              <th class="border border-gray-300 p-3 text-left">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">variant</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'primary' | 'secondary' | 'ghost'</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'primary'</code></td>
              <td class="border border-gray-300 p-3">Style visuel du bouton</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">size</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'sm' | 'md' | 'lg'</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'md'</code></td>
              <td class="border border-gray-300 p-3">Taille du bouton</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">disabled</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">boolean</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">false</code></td>
              <td class="border border-gray-300 p-3">Désactive le bouton</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">type</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'button' | 'submit' | 'reset'</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">'button'</code></td>
              <td class="border border-gray-300 p-3">Type HTML du bouton</td>
            </tr>
            <tr>
              <td class="border border-gray-300 p-3"><code class="text-sm bg-gray-100 px-1 rounded">class</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">string</code></td>
              <td class="border border-gray-300 p-3"><code class="text-sm">''</code></td>
              <td class="border border-gray-300 p-3">Classes CSS additionnelles</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Variantes -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Variantes</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-lg font-medium mb-3">Primary</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Button variant="primary">Bouton Primary</Button>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Button variant="primary"&gt;Bouton Primary&lt;/Button&gt;</code></pre>
        </div>

        <div>
          <h3 class="text-lg font-medium mb-3">Secondary</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Button variant="secondary">Bouton Secondary</Button>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Button variant="secondary"&gt;Bouton Secondary&lt;/Button&gt;</code></pre>
        </div>

        <div>
          <h3 class="text-lg font-medium mb-3">Ghost</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Button variant="ghost">Bouton Ghost</Button>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Button variant="ghost"&gt;Bouton Ghost&lt;/Button&gt;</code></pre>
        </div>
      </div>
    </section>

    <!-- Tailles -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Tailles</h2>

      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <div class="flex items-center gap-4 flex-wrap">
          <Button size="sm">Small</Button>
          <Button size="md">Medium</Button>
          <Button size="lg">Large</Button>
        </div>
      </div>
      <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Button size="sm"&gt;Small&lt;/Button&gt;
&lt;Button size="md"&gt;Medium&lt;/Button&gt;
&lt;Button size="lg"&gt;Large&lt;/Button&gt;</code></pre>
    </section>

    <!-- États -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">États</h2>

      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium mb-3">Normal</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Button>Bouton normal</Button>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium mb-3">Désactivé</h3>
          <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
            <Button disabled>Bouton désactivé</Button>
          </div>
          <pre class="mt-3 p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>&lt;Button disabled&gt;Bouton désactivé&lt;/Button&gt;</code></pre>
        </div>
      </div>
    </section>

    <!-- Exemple d'usage -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Exemple d'usage complet</h2>
      <pre class="p-4 bg-gray-900 text-white rounded text-sm overflow-x-auto"><code>---
import Button from '@/components/primitives/Button.astro';
---

&lt;form&gt;
  &lt;Button type="submit" variant="primary" size="lg"&gt;
    Envoyer le formulaire
  &lt;/Button&gt;

  &lt;Button type="reset" variant="secondary"&gt;
    Réinitialiser
  &lt;/Button&gt;
&lt;/form&gt;</code></pre>
    </section>

    <!-- Notes -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Notes</h2>
      <ul class="list-disc pl-6 space-y-2 text-gray-700">
        <li>Utilise les couleurs de la marque via <code class="text-sm bg-gray-100 px-1 rounded">bg-brand-accent</code> et <code class="text-sm bg-gray-100 px-1 rounded">bg-brand-primary</code></li>
        <li>Focus ring accessible avec <code class="text-sm bg-gray-100 px-1 rounded">focus-visible:ring-2</code></li>
        <li>Support complet de l'attribut <code class="text-sm bg-gray-100 px-1 rounded">aria-disabled</code></li>
        <li>Transitions fluides sur les interactions</li>
      </ul>
    </section>
  </main>
</BaseLayout>
