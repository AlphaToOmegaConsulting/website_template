---
import BaseLayout from '@/layouts/BaseLayout.astro';

const lang = 'fr';
const title = 'Layouts';
const description = 'Composants de mise en page et structure';

const alternateUrls = {
  fr: '/fr/library/layout',
  en: '/en/library/layout'
};

const layouts = [
  {
    name: 'Header',
    slug: 'header',
    description: 'En-tête de navigation principal'
  },
  {
    name: 'Footer',
    slug: 'footer',
    description: 'Pied de page avec liens et informations'
  },
];
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <div class="container mx-auto px-4 py-12 max-w-6xl">
    <a href="/fr/library" class="text-sm text-gray-600 hover:underline mb-4 inline-block">← Retour à la bibliothèque</a>

    <h1 class="text-4xl font-bold mb-6">Layouts</h1>
    <p class="text-lg mb-8 text-gray-600">Composants de mise en page et structure.</p>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-12">
      <p class="text-gray-700">
        <strong>Note :</strong> Les composants Header et Footer sont visibles sur cette page.
        Faites défiler vers le haut pour voir le Header, et vers le bas pour voir le Footer.
      </p>
    </div>

    <div class="space-y-12">
      {layouts.map(l => (
        <div class="border-t pt-8">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-3xl font-bold">{l.name}</h2>
            <span class="text-sm text-gray-500">Visible sur cette page</span>
          </div>
          <p class="text-gray-600 mb-4">{l.description}</p>
          <p class="text-sm text-gray-500">
            {l.slug === 'header' && 'Faites défiler vers le haut de cette page pour voir le composant Header en action.'}
            {l.slug === 'footer' && 'Faites défiler vers le bas de cette page pour voir le composant Footer en action.'}
          </p>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
