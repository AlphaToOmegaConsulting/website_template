---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Welcome to Astro';
const description = 'A modern multilingual website built with Astro, TypeScript, and Tailwind CSS';
---

<BaseLayout
  title={title}
  description={description}
  lang="en"
  alternateUrls={{
    en: '/',
    fr: '/fr/',
  }}
>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-default mx-auto text-center">
      <h1 class="text-5xl font-bold text-brand-primary mb-6">
        {title}
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        {description}
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/en/"
          class="inline-block px-6 py-3 bg-brand-accent text-white font-medium rounded-lg hover:bg-blue-700 transition-colors focus-ring"
        >
          Get Started
        </a>
        <a
          href="/fr/"
          class="inline-block px-6 py-3 border-2 border-brand-accent text-brand-accent font-medium rounded-lg hover:bg-blue-50 transition-colors focus-ring"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
