---
interface Props {
  currentLang: 'fr' | 'en';
  alternateUrls: {
    fr?: string;
    en?: string;
  };
  class?: string;
}

const { currentLang, alternateUrls, class: className = '' } = Astro.props;

// Language labels
const languages = {
  fr: { label: 'Fran√ßais', shortLabel: 'FR' },
  en: { label: 'English', shortLabel: 'EN' },
};

// Get the alternate language URL
const alternateLang = currentLang === 'fr' ? 'en' : 'fr';
const alternateUrl = alternateUrls[alternateLang];
---

{alternateUrl && (
  <div class={`language-switcher ${className}`}>
    <a
      href={alternateUrl}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-brand-primary hover:bg-gray-100 rounded-md transition-colors focus-ring"
      aria-label={currentLang === 'fr' ? `Changer la langue vers ${languages[alternateLang].label}` : `Switch language to ${languages[alternateLang].label}`}
      hreflang={alternateLang}
    >
      <!-- Globe icon -->
      <svg
        class="w-5 h-5 mr-1.5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span class="hidden sm:inline">{languages[alternateLang].label}</span>
      <span class="sm:hidden">{languages[alternateLang].shortLabel}</span>
    </a>
  </div>
)}
