---
import type { ButtonVariant, ButtonSize } from '@/utils/button-styles';
import { variantClasses, sizeClasses, baseClasses } from '@/utils/button-styles';

interface Props {
  variant?: ButtonVariant;
  size?: ButtonSize;
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  type = 'button',
  class: className = '',
} = Astro.props;

const disabledClasses = disabled
  ? 'opacity-50 cursor-not-allowed'
  : '';

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  disabledClasses,
  className,
].filter(Boolean).join(' ');
---

<button
  type={type}
  class={classes}
  disabled={disabled}
  aria-disabled={disabled}
>
  <slot />
</button>
