---
import { getButtonClasses, type ButtonVariant, type ButtonSize } from '@/utils/button-styles';

interface Props {
  variant?: ButtonVariant;
  size?: ButtonSize;
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  type = 'button',
  class: className = '',
} = Astro.props;

const classes = getButtonClasses(variant, size, disabled, className);
---

<button
  type={type}
  class={classes}
  disabled={disabled}
  aria-disabled={disabled}
>
  <slot />
</button>
