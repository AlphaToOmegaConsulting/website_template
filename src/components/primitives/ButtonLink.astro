---
import { buildUrl } from '@/utils/url';
import { getButtonClasses, type ButtonVariant, type ButtonSize } from '@/utils/button-styles';

/**
 * ButtonLink Component
 *
 * A styled link that looks like a button. Supports multiple variants and sizes.
 * Uses Alpha Web Core brand colors for primary variant, standard Tailwind for others.
 *
 * URLs are automatically resolved with base path support for GitHub Pages deployment.
 *
 * @example
 * ```astro
 * <!-- Internal links (automatically prefixed with base path) -->
 * <ButtonLink href="/signup" variant="primary" size="lg">
 *   Get Started
 * </ButtonLink>
 *
 * <!-- External links (unchanged) -->
 * <ButtonLink href="https://example.com" variant="secondary">
 *   Learn More
 * </ButtonLink>
 *
 * <!-- Ghost button (transparent with brand text) -->
 * <ButtonLink href="/about" variant="ghost" size="sm">
 *   About Us
 * </ButtonLink>
 * ```
 *
 * Theming Notes:
 * - Primary variant uses `bg-brand-accent` and `hover:bg-brand-primary`
 * - Secondary variant uses standard Tailwind gray colors
 * - Ghost variant uses `text-brand-primary` for brand consistency
 * - Focus ring uses `ring-brand-accent` for accessibility
 */
interface Props {
  href: string;
  variant?: ButtonVariant;
  size?: ButtonSize;
  target?: '_blank' | '_self';
  rel?: string;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  target,
  rel,
  class: className = '',
} = Astro.props;

// Build URL with base path support
const resolvedHref = buildUrl(href);

// Get button classes (no-underline added for links)
const classes = `${getButtonClasses(variant, size, false, className)} no-underline`;
---

<a
  href={resolvedHref}
  class={classes}
  target={target}
  rel={rel}
>
  <slot />
</a>
