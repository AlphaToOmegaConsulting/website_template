---
/**
 * Alert Component
 *
 * A neutral, reusable alert/notification component.
 * Following Alpha WebCore v3 principles: minimal styling, composable, brand-agnostic.
 *
 * @example
 * ```astro
 * <Alert variant="info">Your changes have been saved.</Alert>
 * <Alert variant="success">Account created successfully!</Alert>
 * <Alert variant="warning">Please verify your email address.</Alert>
 * <Alert variant="error">An error occurred. Please try again.</Alert>
 * ```
 */

interface Props {
  variant?: 'info' | 'success' | 'warning' | 'error';
  dismissible?: boolean;
  class?: string;
}

const {
  variant = 'info',
  dismissible = false,
  class: className = '',
} = Astro.props;

const variantClasses = {
  info: 'bg-info text-info border-info',
  success: 'bg-success text-success border-success',
  warning: 'bg-warning text-warning border-warning',
  error: 'bg-error text-error border-error',
};

const iconPaths = {
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  success: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  warning: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  error: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z',
};

const baseClasses = 'flex items-start gap-3 p-4 border rounded-md';

const classes = [
  baseClasses,
  variantClasses[variant],
  className,
].filter(Boolean).join(' ');

const alertId = `alert-${Math.random().toString(36).substr(2, 9)}`;
---

<div
  id={alertId}
  role="alert"
  class={classes}
>
  <!-- Icon -->
  <svg
    class="w-5 h-5 flex-shrink-0 mt-0.5"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d={iconPaths[variant]}
    />
  </svg>

  <!-- Content -->
  <div class="flex-1">
    <slot />
  </div>

  <!-- Dismiss button -->
  {dismissible && (
    <button
      type="button"
      class="flex-shrink-0 text-current hover:opacity-70 transition-opacity focus:outline-none focus:ring-2 focus:ring-current focus:ring-offset-2 rounded"
      aria-label="Dismiss alert"
      data-dismiss-alert={alertId}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  )}
</div>

{dismissible && (
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const dismissButtons = document.querySelectorAll('[data-dismiss-alert]');

      dismissButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const alertId = button.getAttribute('data-dismiss-alert');
          if (alertId) {
            const alert = document.getElementById(alertId);
            if (alert) {
              alert.remove();
            }
          }
        });
      });
    });
  </script>
)}
