---
interface Props {
  title: string;
  subtitle?: string;
  items: Array<{
    image: {
      src: string;
      alt: string;
    };
    title?: string;
    description?: string;
    category?: string;
    link?: {
      href: string;
      label?: string;
    };
  }>;
  layout?: 'masonry' | 'grid';
  columns?: 2 | 3 | 4;
  aspectRatio?: 'square' | 'landscape' | 'portrait' | 'auto';
  class?: string;
}

const {
  title,
  subtitle,
  items,
  layout = 'grid',
  columns = 3,
  aspectRatio = 'auto',
  class: className = '',
} = Astro.props;

const sectionClasses = [
  'py-16 md:py-24 bg-white',
  className,
].filter(Boolean).join(' ');

const gridColsClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
};

const aspectRatioClasses = {
  square: 'aspect-square',
  landscape: 'aspect-video',
  portrait: 'aspect-[3/4]',
  auto: '',
};

const gridClasses = layout === 'masonry'
  ? `columns-1 md:columns-2 lg:columns-${columns} gap-6 space-y-6`
  : `grid ${gridColsClasses[columns]} gap-6 lg:gap-8`;
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-brand-primary mb-4">
        {title}
      </h2>

      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>

    <div class={gridClasses}>
      {items.map((item) => (
        <div class={`group relative overflow-hidden rounded-lg ${layout === 'masonry' ? 'break-inside-avoid mb-6' : ''}`}>
          {/* Image container */}
          <div class={`relative overflow-hidden bg-gray-100 ${aspectRatioClasses[aspectRatio]}`}>
            <img
              src={item.image.src}
              alt={item.image.alt}
              class={`w-full h-full object-cover transition-transform duration-300 group-hover:scale-110 ${
                aspectRatio === 'auto' ? 'h-auto' : ''
              }`}
              loading="lazy"
              decoding="async"
            />

            {/* Overlay on hover */}
            {(item.title || item.description || item.link) && (
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                  {item.category && (
                    <span class="inline-block px-3 py-1 text-xs font-semibold bg-brand-accent rounded-full mb-2">
                      {item.category}
                    </span>
                  )}

                  {item.title && (
                    <h3 class="text-xl font-bold mb-2">
                      {item.title}
                    </h3>
                  )}

                  {item.description && (
                    <p class="text-sm text-gray-200 mb-3">
                      {item.description}
                    </p>
                  )}

                  {item.link && (
                    <a
                      href={item.link.href}
                      class="inline-flex items-center gap-2 text-sm font-semibold hover:underline"
                    >
                      {item.link.label || 'View more'}
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            )}
          </div>

          {/* Info below image (alternative to overlay) */}
          {(item.title || item.description) && !(item.link) && (
            <div class="mt-4">
              {item.category && (
                <span class="inline-block px-3 py-1 text-xs font-semibold bg-gray-100 text-gray-700 rounded-full mb-2">
                  {item.category}
                </span>
              )}

              {item.title && (
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  {item.title}
                </h3>
              )}

              {item.description && (
                <p class="text-sm text-gray-600">
                  {item.description}
                </p>
              )}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
