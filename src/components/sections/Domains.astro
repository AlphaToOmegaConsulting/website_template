---
interface Domain {
  id: string;
  name: string;
  description: string;
  icon?: string;
}

interface Props {
  title: string;
  subtitle?: string;
  domains: Domain[];
  columns?: 2 | 3;
  class?: string;
}

const {
  title,
  subtitle,
  domains,
  columns = 3,
  class: className = '',
} = Astro.props;

const sectionClasses = [
  'py-16 md:py-24 bg-white',
  className,
].filter(Boolean).join(' ');

const gridColsClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
};
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading mb-4">
        {title}
      </h2>
      
      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>
    
    <!-- Domains Grid -->
    <div class={`grid ${gridColsClasses[columns]} gap-8 lg:gap-10`}>
      {domains.map((domain) => (
        <div class="flex flex-col bg-gray-50 rounded-lg p-6 hover:shadow-lg transition-shadow border border-gray-100">
          {domain.icon && (
            <div class="text-5xl mb-4">
              {domain.icon}
            </div>
          )}
          
          <h3 class="text-xl sm:text-2xl font-semibold font-heading mb-3 text-gray-900">
            {domain.name}
          </h3>
          
          <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
            {domain.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
