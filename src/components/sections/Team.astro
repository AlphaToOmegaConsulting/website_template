---
interface Author {
  id: string;
  name: string;
  role: string;
  avatar: string;
  bio: string;
  social?: {
    twitter?: string;
    github?: string;
    linkedin?: string;
  };
}

interface Props {
  title: string;
  subtitle?: string;
  authors: Author[];
  columns?: 2 | 3 | 4;
  enablePagination?: boolean;
  itemsPerPage?: number;
  class?: string;
}

const {
  title,
  subtitle,
  authors,
  columns = 3,
  enablePagination = false,
  itemsPerPage = 6,
  class: className = '',
} = Astro.props;

const sectionClasses = [
  'py-16 md:py-24 bg-gray-50',
  className,
].filter(Boolean).join(' ');

const gridColsClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
};

// Generate a unique ID for this team section
const sectionId = `team-${Math.random().toString(36).substring(2, 9)}`;
---

<section class={sectionClasses} id={sectionId} data-pagination={enablePagination} data-items-per-page={itemsPerPage}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-brand-primary mb-4">
        {title}
      </h2>

      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>

    <div class={`grid ${gridColsClasses[columns]} gap-8 lg:gap-10`} data-team-grid>
      {authors.map((author, index) => (
        <div
          class="flex flex-col items-center text-center bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow"
          data-team-member
          data-index={index}
        >
          <img
            src={author.avatar}
            alt={author.name}
            class="w-32 h-32 rounded-full object-cover mb-4"
            loading="lazy"
            decoding="async"
          />

          <h3 class="text-xl font-semibold font-heading text-gray-900 mb-1">
            {author.name}
          </h3>

          <p class="text-sm text-brand-primary font-medium mb-3">
            {author.role}
          </p>

          <p class="text-base text-gray-600 mb-4 leading-relaxed">
            {author.bio}
          </p>

          {author.social && (
            <div class="flex gap-4 mt-auto">
              {author.social.twitter && (
                <a
                  href={`https://twitter.com/${author.social.twitter}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-brand-primary transition-colors"
                  aria-label={`${author.name} sur Twitter`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
              )}

              {author.social.github && (
                <a
                  href={`https://github.com/${author.social.github}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-brand-primary transition-colors"
                  aria-label={`${author.name} sur GitHub`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                </a>
              )}

              {author.social.linkedin && (
                <a
                  href={`https://linkedin.com/in/${author.social.linkedin}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-brand-primary transition-colors"
                  aria-label={`${author.name} sur LinkedIn`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
            </div>
          )}
        </div>
      ))}
    </div>

    {/* Pagination controls */}
    {enablePagination && authors.length > itemsPerPage && (
      <div class="flex justify-center items-center gap-2 mt-12" data-pagination-controls>
        <button
          type="button"
          data-pagination-prev
          class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          aria-label="Previous page"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>

        <div class="flex gap-2" data-pagination-numbers></div>

        <button
          type="button"
          data-pagination-next
          class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          aria-label="Next page"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    )}
  </div>
</section>

{enablePagination && (
  <script define:vars={{ sectionId }}>
    function initTeamPagination(id) {
      const section = document.getElementById(id);
      if (!section) return;

      const itemsPerPage = parseInt(section.dataset.itemsPerPage || '6');
      const members = Array.from(section.querySelectorAll('[data-team-member]'));
      const totalPages = Math.ceil(members.length / itemsPerPage);
      let currentPage = 1;

      const prevBtn = section.querySelector('[data-pagination-prev]');
      const nextBtn = section.querySelector('[data-pagination-next]');
      const numbersContainer = section.querySelector('[data-pagination-numbers]');

      function showPage(page) {
        currentPage = page;

        // Hide all members
        members.forEach(member => {
          member.style.display = 'none';
        });

        // Show members for current page
        const start = (page - 1) * itemsPerPage;
        const end = start + itemsPerPage;
        members.slice(start, end).forEach(member => {
          member.style.display = '';
        });

        // Update button states
        if (prevBtn) prevBtn.disabled = page === 1;
        if (nextBtn) nextBtn.disabled = page === totalPages;

        // Update page numbers
        renderPageNumbers();

        // Scroll to section
        section.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      function renderPageNumbers() {
        if (!numbersContainer) return;

        numbersContainer.innerHTML = '';

        for (let i = 1; i <= totalPages; i++) {
          const btn = document.createElement('button');
          btn.type = 'button';
          btn.textContent = i;
          btn.className = i === currentPage
            ? 'px-4 py-2 rounded-lg bg-brand-accent text-white font-semibold'
            : 'px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 transition-colors';
          btn.onclick = () => showPage(i);
          btn.setAttribute('aria-label', `Page ${i}`);
          btn.setAttribute('aria-current', i === currentPage ? 'page' : 'false');

          numbersContainer.appendChild(btn);
        }
      }

      // Event listeners
      if (prevBtn) {
        prevBtn.onclick = () => {
          if (currentPage > 1) showPage(currentPage - 1);
        };
      }

      if (nextBtn) {
        nextBtn.onclick = () => {
          if (currentPage < totalPages) showPage(currentPage + 1);
        };
      }

      // Initialize
      showPage(1);
    }

    // Initialize on DOMContentLoaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => initTeamPagination(sectionId));
    } else {
      initTeamPagination(sectionId);
    }
  </script>
)}
