---
interface Props {
  width?: 'narrow' | 'default' | 'wide' | 'full';
  spacing?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  background?: string;
  class?: string;
}

const {
  width = 'default',
  spacing = 'md',
  background,
  class: className = '',
} = Astro.props;

// Width classes mapping
const widthClasses = {
  narrow: 'max-w-narrow',
  default: 'max-w-default',
  wide: 'max-w-wide',
  full: 'max-w-full',
};

// Spacing classes mapping (vertical padding)
const spacingClasses = {
  none: 'py-0',
  sm: 'py-8',
  md: 'py-12',
  lg: 'py-20',
  xl: 'py-28',
};

// Horizontal padding (responsive)
const horizontalPadding = width === 'full' ? '' : 'px-4 sm:px-6 lg:px-8';

// Combine all classes
const containerClasses = [
  widthClasses[width],
  spacingClasses[spacing],
  horizontalPadding,
  'mx-auto',
  'w-full',
  className,
].filter(Boolean).join(' ');
---

<section class={background}>
  <div class={containerClasses}>
    <slot />
  </div>
</section>
