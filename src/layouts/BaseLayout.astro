---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { buildUrl } from '@/utils/url';

interface Props {
  title: string;
  description: string;
  lang: 'fr' | 'en';
  alternateUrls?: {
    fr?: string;
    en?: string;
  };
  ogImage?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  lang,
  alternateUrls,
  ogImage,
  noindex = false,
} = Astro.props;

// Get site origin (without base path)
const siteOrigin = Astro.site ? new URL(Astro.site).origin : '';

// Build canonical URL (site origin + current URL with base path from Astro)
const canonicalUrl = Astro.url.href;

// Default OG image if not provided
const defaultOgImage = '/og-default.jpg';
const ogImageUrl = ogImage || defaultOgImage;
const ogImageFullUrl = `${siteOrigin}${buildUrl(ogImageUrl)}`;

// Build alternate URLs with base path support
const alternateFrUrl = alternateUrls?.fr
    ? `${siteOrigin}${buildUrl(alternateUrls.fr)}`
    : undefined;
const alternateEnUrl = alternateUrls?.en
    ? `${siteOrigin}${buildUrl(alternateUrls.en)}`
    : undefined;

// Site name for OG tags
const siteName = 'Astro Multilingual Website';

// Twitter card type
const twitterCard = 'summary_large_image';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Robots -->
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- hreflang Links for i18n -->
    {alternateFrUrl && (
      <link rel="alternate" hreflang="fr" href={alternateFrUrl} />
    )}
    {alternateEnUrl && (
      <link rel="alternate" hreflang="en" href={alternateEnUrl} />
    )}
    {(alternateFrUrl || alternateEnUrl) && (
      <link
        rel="alternate"
        hreflang="x-default"
        href={alternateFrUrl || alternateEnUrl || canonicalUrl}
      />
    )}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageFullUrl} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />
    {alternateUrls?.fr && lang === 'en' && (
      <meta property="og:locale:alternate" content="fr_FR" />
    )}
    {alternateUrls?.en && lang === 'fr' && (
      <meta property="og:locale:alternate" content="en_US" />
    )}
    
    <!-- Twitter -->
    <meta property="twitter:card" content={twitterCard} />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageFullUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={buildUrl('/favicon.svg')} />
    
    <!-- Global Scripts Placeholder -->
    <!-- Add analytics, tracking, or other global scripts here -->
    <slot name="head" />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <!-- Header -->
      <Header lang={lang} currentPath={Astro.url.pathname} alternateUrls={alternateUrls} />
      
      <!-- Main Content -->
      <main class="flex-grow">
        <slot />
      </main>
      
      <!-- Footer -->
      <Footer lang={lang} />
    </div>
    
    <!-- Global Scripts -->
    <slot name="scripts" />
  </body>
</html>
